<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatis.dao.CommentDAO">
    <resultMap id="commentResultMap" type="com.example.mybatis.dataobject.CommentDO">
        <id column="id" property="id"/>
        <result column="ref_id" property="refId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="parent_id" property="parentId"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <resultMap id="commentModelResultMap" type="com.example.mybatis.model.Comment">
        <id column="id" property="id"/>
        <result column="ref_id" property="refId"/>
        <result column="content" property="content"/>
        <result column="parent_id" property="parentId"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <association property="author" javaType="com.example.mybatis.model.User">
            <id property="id" column="user_id"/>
            <result column="user_name" property="userName"/>
            <result column="nick_name" property="nickName"/>
            <result column="avatar" property="avatar"/>
        </association>
    </resultMap>

    <insert id="insert" parameterType="com.example.mybatis.dataobject.CommentDO" useGeneratedKeys="true" keyProperty="id">
        insert into comment (ref_id, user_id, content, parent_id, gmt_created, gmt_modified)
        values (#{refId}, #{userId}, #{content}, #{parentId}, now(), now())
    </insert>

    <update id="update" parameterType="com.example.mybatis.dataobject.CommentDO">
        update comment
        <set>
          <if test="content != null">
            content=#{content}, gmt_modified=now()
          </if>
        </set>
        where id=#{id}
    </update>

    <delete id="delete">
        delete from comment where id=#{id}
    </delete>

    <select id="findAll" resultMap="commentResultMap">
        select * from comment
    </select>

    <select id="findByRefId" resultMap="commentModelResultMap">

        select a.*,u.user_name,u.nick_name,u.avatar from comment a left join `user` u on a.user_id=u.id where ref_id=#{refId}
        order by a.gmt_created desc
    </select>

    <insert id="batchAdd" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        insert into comment (ref_id, user_id, content, parent_id, gmt_created, gmt_modified)
        values
        <foreach collection="list" item="it" index="index" separator=",">
            (#{it.refId}, #{it.userId},#{it.content}, #{it.parentId}, now(), now())
        </foreach>
    </insert>

    <select id="findByUserIds" resultMap="commentResultMap">
        select * from comment
        <where>
            user_id in
            <foreach collection="userIds" item="it" index="index" open="(" separator="," close=")">
                #{it}
            </foreach>
        </where>
    </select>

</mapper>